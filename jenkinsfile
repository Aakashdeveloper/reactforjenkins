pipeline {
    agent any
    tools {nodejs "NodeJS"}
    stages {
        stage("Install") {
            steps {
                sh "npm install"
            }
        }
        stage("Build") {
            steps {
                sh "npm run build"
            }
        }
        stage("Deploy") {
            steps {
                sh "del -rf /var/www/react-app"
                sh "cp - r ${WORKSPACE}/build/ /var/www/react-app"
            }
        }
    }
}
